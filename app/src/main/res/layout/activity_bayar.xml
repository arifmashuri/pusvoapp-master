<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".BayarActivity">

    <LinearLayout
        android:background="#0F2C2121"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
            <include
                android:id="@+id/toolbar"
                layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <com.facebook.shimmer.ShimmerFrameLayout
            android:visibility="gone"
            android:id="@+id/shimmer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:elevation="5dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/id_order"
                        
                        android:textColor="@android:color/darker_gray" />
                    <View
                        android:layout_width="100dp"
                        android:layout_height="16sp"
                        android:background="@color/abu" />
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hp"
                        android:textColor="@android:color/darker_gray" />
                    <View
                        android:layout_width="150dp"
                        android:layout_height="16sp"
                        android:background="@color/abu" />


                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/produk"
                        
                        android:textColor="@android:color/darker_gray" />

                    <View
                        android:layout_width="150dp"
                        android:layout_height="16sp"
                        android:background="@color/abu" />


                    <View
                        android:background="@color/abu"
                        android:layout_width="50dp"
                        android:layout_height="16sp"/>
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black"
                        android:text="@string/atau2" />
                    <View
                        android:background="@color/abu"
                        android:layout_width="50dp"
                        android:layout_height="16sp"/>

                    <View
                        android:background="@color/abu"
                        android:layout_width="50dp"
                        android:layout_height="16sp"/>





                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_margin="16dp"
                        android:background="@drawable/buttonshape"
                        android:text="@string/konfirmasi"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textStyle="bold" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </com.facebook.shimmer.ShimmerFrameLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:orientation="vertical"
                android:visibility="visible"
                android:id="@+id/detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="5dp"
                    app:cardCornerRadius="8dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:orientation="vertical"
                        android:padding="8dp">
                <TextView
                    android:textSize="14sp"
                    android:id="@+id/notice"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:textColor="@color/merah"
                    android:text="@string/perhatian" />


                <TextView
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/id_order"
                    
                    android:textColor="@android:color/darker_gray" />
                <TextView
                    android:textSize="16sp"
                    android:id="@+id/editTextTransaction_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    
                    android:textColor="@android:color/black" />
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hp"
                        
                        android:textColor="@android:color/darker_gray" />
                    <TextView
                        android:id="@+id/editTexthp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:textColor="@android:color/black" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/LinearMeter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/meter"
                        
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/editTextMeter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:textColor="@android:color/black" />

                </LinearLayout>
                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/LinearVA"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:orientation="vertical">
                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/no_va"
                        
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/editVA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/black" />

                </LinearLayout>

                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/produk"
                        
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/editTextProduk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:textColor="@android:color/black" />

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/LinearNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nama"
                        
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/editTextNama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/LinearJumlahBulan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jumlah_bulan"
                        
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/editTextJumlahBulan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/LinearJumlahOrang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/jumlah_orang"
                        
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/editTextJumlahOrang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:textColor="@android:color/black" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/LinearBulan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bulan"
                        
                        android:textColor="@android:color/darker_gray" />

                    <TextView
                        android:id="@+id/editTextBulan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        
                        android:textColor="@android:color/black" />

                </LinearLayout>
                <TextView
                    android:id="@+id/instruksi"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/abu_tua"
                    android:text="@string/silakan" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                <TextView
                    android:textColor="@android:color/black"
                    android:id="@+id/editTextHarga"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                        <ImageView
                            android:id="@+id/copyharga1"
                            android:contentDescription="@string/salin"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="5dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:paddingTop="0dp"
                            android:paddingRight="5dp"
                            android:paddingBottom="0dp"
                            android:src="@drawable/copy2" />
                    </LinearLayout>
                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/instruksi2"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/isikan_username"
                            android:textColor="@color/abu_tua" />
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/LinearTujuan"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/teks_tujuan"
                                android:textColor="@android:color/black"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="@string/username_pusvo"/>
                            <ImageView
                                android:id="@+id/copyUsername"
                                android:contentDescription="@string/salin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:paddingTop="0dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="0dp"
                                android:src="@drawable/copy2" />
                        </LinearLayout>


                        <TextView
                            android:visibility="gone"
                            android:id="@+id/lalu"
                            android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                            android:textColor="@color/abu_tua"
                    android:text="@string/lalu" />


                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/LinearMemo"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/memo"
                                android:textColor="@android:color/black"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/username_pusvo"/>
                            <ImageView
                                android:id="@+id/copyMemo"
                                android:contentDescription="@string/salin"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="5dp"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:paddingTop="0dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="0dp"
                                android:src="@drawable/copy2" />
                        </LinearLayout>


                        <TextView
                            android:visibility="gone"
                            android:id="@+id/judulvoucher2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/voucher"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            app:fontFamily="@font/ubuntu" />

                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/LinearVoucher2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <EditText
                                android:maxLength="32"
                                android:background="@color/abu_muda"
                                android:id="@+id/editTextKode_voucher2"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:inputType="textNoSuggestions"
                                android:hint="@string/kode_voucher"
                                android:autofillHints="@string/kode_voucher"
                                android:singleLine="true"/>
                            <ImageButton
                                android:contentDescription="@string/bayar_sekarang"
                                android:id="@+id/buttonPaste2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_paste" />



                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/judulvoucher1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/voucher"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="14sp"
                            app:fontFamily="@font/ubuntu" />

                        <LinearLayout
                    android:visibility="gone"
                    android:id="@id/LinearVoucher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:maxLength="32"
                        android:background="@color/abu_muda"
                        android:id="@+id/editTextKode_voucher"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:inputType="textNoSuggestions"
                        android:hint="@string/kode_voucher"
                        android:autofillHints="@string/kode_voucher"
                        android:singleLine="true"/>
                    <ImageButton
                        android:contentDescription="@string/bayar_sekarang"
                        android:id="@+id/buttonPaste"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_paste" />



                </LinearLayout>
                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/qrlayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/qr"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"/>



                            <ImageView
                                android:layout_gravity="center"
                                android:gravity="center_vertical"
                                android:id="@+id/saveimg"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/download"
                                />


                        </LinearLayout>
                        <ProgressBar
                            android:visibility="gone"
                            android:id="@+id/progress_bar"
                            style="?android:attr/progressBarStyleLarge"
                            android:layout_width="match_parent"
                            android:indeterminate="true"
                            android:indeterminateTintMode="src_atop"
                            android:indeterminateTint="@color/bg_color"
                            android:layout_height="wrap_content" />
                        <Button
                            android:visibility="gone"
                            android:id="@+id/buttonBayarShopeepay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="16dp"
                            android:background="@drawable/buttonshape"
                            android:text="@string/lanjutkan"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <Button
                            android:visibility="gone"
                            android:id="@+id/buttonBayarLinkaja"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="16dp"
                            android:background="@drawable/buttonshape"
                            android:text="@string/lanjutkan"
                            android:textAllCaps="false"
                            android:textColor="#ffffff"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:background="@color/abu_muda"
                                android:textSize="14sp"
                                android:id="@+id/pesan"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_margin="16dp"
                                android:textColor="@color/merah"
                                android:text="@string/perhatian" />


                        </LinearLayout>

                        <Button
                    android:id="@+id/buttonBayar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="16dp"
                    android:background="@drawable/buttonshape"
                    android:text="@string/konfirmasi"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="18sp"
                    android:textStyle="bold" />
                        <TextView
                            android:id="@+id/petunjukbayar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/petunjuk_indodax2"
                            android:layout_marginTop="10dp"
                            android:textSize="14sp"
                            />
            </LinearLayout>


            </androidx.cardview.widget.CardView>


        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
        </LinearLayout>

</RelativeLayout>