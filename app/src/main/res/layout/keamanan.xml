<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".Keamanan">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"/>


        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="13dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:cardCornerRadius="2dp">

                <LinearLayout
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="13.3dp"
                    android:paddingTop="23.3dp"
                    android:paddingRight="13.3dp"
                    android:paddingBottom="23.3dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/ubuntu"
                        android:text="@string/password_lama"
                        android:textColor="@color/abu"
                        android:textSize="14sp" />
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:maxLength="32"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="11.3dp"
                            android:paddingRight="11.3dp"
                            android:id="@+id/editPassword"
                            android:hint="@string/password_lama"
                            android:autofillHints="@string/password_lama"
                            android:inputType="textPassword"
                            android:textColor="@color/hitam"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/passwordcek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/centang"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/ubuntu"
                        android:text="@string/password_baru"
                        android:textColor="@color/abu"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:maxLength="32"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:paddingLeft="11.3dp"
                            android:paddingRight="11.3dp"
                            android:id="@+id/editPasswordBaru"
                            android:hint="@string/password_baru"
                            android:autofillHints="@string/password_baru"
                            android:inputType="textPassword"
                            android:textColor="@color/hitam"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/passwordbarucek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/centang"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>

                    <TextView
                        android:textSize="14sp"
                        android:textColor="@color/text_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/formatpassword"
                        />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:fontFamily="@font/ubuntu"
                        android:text="@string/ulangi_password_baru"
                        android:textColor="@color/abu"
                        android:textSize="14sp" />


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <EditText
                            android:maxLength="32"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:inputType="textPassword"
                            android:paddingLeft="11.3dp"
                            android:paddingRight="11.3dp"
                            android:id="@+id/editPasswordBaru2"
                            android:hint="@string/ulangi_password_baru"
                            android:autofillHints="@string/ulangi_password_baru"
                            android:textColor="@color/hitam"
                            />
                        <ImageView
                            android:visibility="gone"
                            android:id="@+id/passwordbaru2cek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/centang"
                            android:layout_gravity="center"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/gambar"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/kotak"/>
                        <TextView
                            android:textSize="14sp"
                            android:id="@+id/tampilkan"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:text="@string/tampilkan_password"/>
                        <TextView
                            android:visibility="gone"
                            android:id="@+id/tampilkanpw"
                            android:layout_width="wrap_content"
                            android:layout_gravity="center"
                            android:layout_height="wrap_content"
                            android:text="1"/>
                    </LinearLayout>


                    <Button
                        android:id="@+id/buttonSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"
                        android:background="@drawable/buttonshape"
                        app:fontFamily="@font/ubuntu"
                        android:text="@string/ganti_password"
                        android:textAllCaps="false"
                        android:textColor="#ffffff"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        />


                </LinearLayout>

            </androidx.cardview.widget.CardView>





    </LinearLayout>

</RelativeLayout>