<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f6f6"
    tools:context=".AkunSayaActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include
            android:id="@+id/toolbar"
            layout="@layout/layout_toolbar"/>
        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/detail"
                    android:layout_width="match_parent"
                    android:layout_height="108dp"
                    android:layout_marginTop="11.7dp"
                    android:background="@color/putih"
                    android:orientation="horizontal"
                    android:paddingLeft="16.7dp">

                    <ImageView
                        android:id="@+id/profile_photo"
                        android:layout_gravity="center"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/akun"
                        android:visibility="gone" />


                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/linearsingkatan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:background="@drawable/circle">

                        <TextView

                            android:id="@+id/singkatan"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="center"
                            android:layout_marginLeft="17.3dp"
                            android:textColor="@color/putih"
                            android:textSize="21.7sp"
                            android:textStyle="normal" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="16.7dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:id="@+id/editTextnama"
                            android:textColor="@color/hitam"
                            android:textSize="15sp"
                            android:text="-"
                            android:textStyle="normal" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8.3dp"
                            
                            android:id="@+id/editTextemail"
                            android:textColor="@color/abu"
                            android:textSize="11.7sp"
                            android:text="-"
                            android:textStyle="normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="3.3dp"
                            
                            android:id="@+id/editTexthp"
                            android:textColor="@color/abu"
                            android:textSize="11.7sp"
                            android:text="-"
                            android:textStyle="normal" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="1.3dp"
                            
                            android:id="@+id/editTextusername"
                            android:textColor="@color/abu"
                            android:textSize="11.7sp"
                            android:text="-"
                            android:textStyle="normal" />

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/buttonSubmit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16.7dp"
                        android:padding="5dp"
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        >
                        <ImageView
                            android:padding="5dp"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/ic_logout" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/keluar"
                            />
                    </LinearLayout>


                </LinearLayout>


                <com.facebook.shimmer.ShimmerFrameLayout

                    android:id="@+id/shimmer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="108dp"
                        android:layout_marginTop="11.7dp"
                        android:background="@color/putih"
                        android:orientation="horizontal"
                        android:paddingLeft="16.7dp">
                        <LinearLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                           android:layout_gravity="center"
                            android:background="@color/abu">

                            <View
                                android:background="@color/abu"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="17.3dp"

                                android:textColor="@color/putih"
                                android:textSize="21.7sp"
                                android:textStyle="normal" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="16.7dp"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <View
                                android:layout_width="100dp"
                                android:layout_height="15sp"
                                android:background="@color/abu" />

                            <View
                                android:layout_width="150dp"
                                android:layout_height="12sp"
                                android:layout_marginTop="8.3dp"
                                android:background="@color/abu" />

                            <View
                                android:layout_width="100dp"
                                android:layout_height="12sp"
                                android:layout_marginTop="3.3dp"
                                android:background="@color/abu" />


                            <View
                                android:layout_width="100dp"
                                android:layout_height="12sp"
                                android:layout_marginTop="1.3dp"
                                android:background="@color/abu" />

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/buttonSubmit2"
                            android:layout_marginRight="16.7dp"
                            android:padding="5dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:orientation="vertical"
                            >
                            <ImageView
                                android:padding="5dp"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center_vertical"
                                android:src="@drawable/ic_logout" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/keluar"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </com.facebook.shimmer.ShimmerFrameLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.7dp"
                    android:background="@color/putih"
                    android:orientation="vertical">


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ececec" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="21dp"
                        android:paddingLeft="16.3dp"
                        android:paddingStart="16.3dp"
                        android:paddingTop="21dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/dompet_abu" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41.3dp"
                            android:layout_weight="1"

                            android:text="@string/saldo"
                            android:textColor="@color/hitam"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                        <com.facebook.shimmer.ShimmerFrameLayout
                            android:id="@+id/saldoshimmer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                            <View
                                android:background="@color/abu"
                                android:layout_width="100dp"
                                android:layout_height="15sp"
                                android:paddingRight="16.7dp"
                                />
                        </com.facebook.shimmer.ShimmerFrameLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/editTextsaldo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:paddingRight="16.7dp"
                            android:text="-"
                            android:textColor="@color/background"
                            android:textSize="15sp"
                            android:textStyle="normal" />


                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/printer_setting"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="21dp"
                        android:paddingLeft="16.3dp"
                        android:paddingTop="21dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/printer_abu" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41.3dp"
                            android:layout_weight="1"
                            android:text="@string/printer_setting"
                            android:textColor="@color/hitam"
                            android:textSize="15sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/btdevice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            
                            android:paddingRight="16.7dp"
                            android:text="tes"
                            android:textColor="@color/background"
                            android:textSize="15sp"
                            android:textStyle="normal" />


                    </LinearLayout>



                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11.7dp"
                    android:background="@color/putih"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/kyc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="21dp"
                        android:paddingLeft="16.3dp"
                        android:paddingTop="21dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/kyc" />



                        <TextView
                            android:id="@+id/tekskyc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41.3dp"
                            android:layout_marginTop="3dp"
                            android:text="@string/verifikasi_kyc"
                            android:textColor="@color/hitam"
                            android:textSize="15sp"
                            android:textStyle="normal" />




                    </LinearLayout>




                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ececec" />
                    <LinearLayout
                        android:id="@+id/keamanan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="21dp"
                        android:paddingLeft="16.3dp"
                        android:paddingTop="21dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/keamanan" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41.3dp"
                            android:layout_marginTop="3dp"
                            android:text="@string/keamanan"
                            android:textColor="@color/hitam"
                            android:textSize="15sp"
                            android:textStyle="normal" />




                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ececec" />
                    <LinearLayout
                        android:id="@+id/resetauthenticator"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="21dp"
                        android:paddingLeft="16.3dp"
                        android:paddingTop="21dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/pin" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41.3dp"
                            android:layout_marginTop="3dp"
                            
                            android:text="@string/reset_authenticator"
                            android:textColor="@color/hitam"
                            android:textSize="15sp"
                            android:textStyle="normal" />




                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ececec" />

                    <LinearLayout
                        android:id="@+id/testimoni"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="21dp"
                        android:paddingLeft="16.3dp"
                        android:paddingTop="21dp">


                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/bintang" />



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41.3dp"
                            android:layout_marginTop="3dp"
                            
                            android:text="@string/testimoni"
                            android:textColor="@color/hitam"
                            android:textSize="15sp"
                            android:textStyle="normal" />




                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ececec" />



                    <LinearLayout
                        android:id="@+id/bantuan"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="21dp"
                        android:paddingLeft="16.3dp"
                        android:paddingTop="21dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/bantuan" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="41.3dp"
                            
                            android:text="@string/bantuan"
                            android:textColor="@color/hitam"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ececec" />




                </LinearLayout>


                <LinearLayout
                    android:background="@color/putih"
                    android:layout_marginTop="30dp"
                    android:id="@+id/sk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="11dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="11dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/sk"
                        android:textColor="@color/hitam"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ececec" />


                <LinearLayout
                    android:background="@color/putih"

                    android:id="@+id/tentangkami"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="11dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="11dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:text="@string/tentang_kami"
                        android:textColor="@color/hitam"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#ececec" />
                    <LinearLayout
                        android:background="@color/putih"
                        android:id="@+id/kontakkami"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"

                        android:paddingBottom="11dp"
                        android:paddingLeft="16.3dp"
                        android:paddingTop="11dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginStart="10dp"

                            android:text="@string/kontak_kami"
                            android:textColor="@color/hitam"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#ececec" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="11dp"
                    android:background="@color/putih"
                    android:layout_marginBottom="65.7dp"
                    android:paddingLeft="16.3dp"
                    android:paddingTop="11dp">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:text="@string/versi_aplikasi"
                        android:textColor="@color/hitam"
                        android:textSize="15sp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/versiaplikasi"
                        android:layout_marginTop="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/hitam"
                        android:paddingRight="16.7dp"
                        android:text="v 4.4.2"
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>


            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
    <com.roughike.bottombar.BottomBar
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="52.6dp"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:elevation="8dp"
        android:gravity="bottom|end"
        android:layout_gravity="bottom"
        app:bb_activeTabColor="#ffffff"
        app:bb_badgesHideWhenActive="true"
        app:bb_inActiveTabColor="#a4ebfe"
        app:bb_showShadow="true"
        app:bb_tabXmlResource="@xml/tab"
        app:bb_titleTextAppearance="@style/botoombar_textchange"
        app:paddingStart="10dp" />

</RelativeLayout>